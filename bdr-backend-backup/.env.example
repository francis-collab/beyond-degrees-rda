# =============================================================================
# BDR – .env.example
# Copy this file to .env and fill in your real values
# NEVER commit the real .env file!
# =============================================================================

# ── 1. DATABASE ──────────────────────────────────────────────────────────────
DATABASE_URL=sqlite:///./bdr.db
# In production (optional later): postgresql://user:pass@host:5432/bdr

# ── 2. SECURITY & AUTH ───────────────────────────────────────────────────────
SECRET_KEY=your_very_long_random_secret_key_here_at_least_50_chars_1234567890
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=60

# ── 3. EMAIL (Gmail recommended in production) ───────────────────────────────
SMTP_HOST=smtp.gmail.com              # ← Change from localhost in production
SMTP_PORT=587
SMTP_USER=francisschooten@gmail.com   # ← Your real Gmail
SMTP_PASSWORD=your_16_digit_app_password_no_spaces
EMAIL_FROM=francisschooten@gmail.com
EMAIL_FROM_NAME=Francis @ Beyond Degrees Rwanda

# ── 4. MTN MoMo (Sandbox → change to "live" later) ───────────────────────────
MOMO_ENV=sandbox
MOMO_API_USER=your_momo_api_user
MOMO_API_KEY=your_momo_api_key
MOMO_SUBSCRIPTION_KEY=your_momo_subscription_key
MOMO_CALLBACK_URL=https://api.bdr.rw/api/v1/transactions/webhook/momo   # ← Update domain

# ── 5. STRIPE (Test keys → replace with live keys later) ────────────────────
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PUBLIC_KEY=pk_test_...

# ── 6. APP & FRONTEND ────────────────────────────────────────────────────────
FRONTEND_URL=http://localhost:3000                 # → https://bdr.rw in production
ALLOWED_HOSTS=localhost,127.0.0.1,api.bdr.rw       # Add your real domain later

# ── 7. MISC ──────────────────────────────────────────────────────────────────
DEBUG=True        # ← Set to False in production
LOG_LEVEL=INFO
JOB_CREATION_RATE=10000